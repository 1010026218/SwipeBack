<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <View
        android:id="@+id/arrowTop"
        android:layout_width="@dimen/arrow_width"
        android:layout_height="@dimen/arrow_height"
        android:background="@drawable/swipeback_arrow_left"
        android:layout_gravity="center_vertical|right"
        android:layout_marginBottom="@dimen/space_arrow_top_to_text"
        />



    <com.hannesdorfmann.swipeback.view.VerticalTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="bottom|right"

        style="@style/swipeBackText"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/text_up"
        android:text="@string/swipeback_back"
        />


    <View
        android:id="@+id/arrowBottom"
        android:layout_width="@dimen/arrow_width"
        android:layout_height="@dimen/arrow_height"
        android:background="@drawable/swipeback_arrow_left"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="@dimen/space_arrow_bottom_to_text"
        />

</FrameLayout>